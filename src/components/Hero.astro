---
import CatalystLogo from './CatalystLogo.astro';
import ParticleCanvas from './ParticleCanvas';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Particle canvas background -->
  <div class="absolute inset-0">
    <ParticleCanvas client:only="react" />
  </div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col items-center text-center max-w-3xl mx-auto px-6 pt-24 sm:pt-32">
    <!-- Hero image (coffee cup illustration) -->
    <div class="w-[200px] sm:w-[260px] lg:w-[300px] mb-8">
      <img
        src="/catalyst-hero.png"
        alt="Catalyst Studio"
        width="992"
        height="1056"
        class="w-full h-auto drop-shadow-[0_0_40px_rgba(34,211,238,0.15)]"
        loading="eager"
      />
    </div>

    <div class="flex justify-center mb-6">
      <CatalystLogo size={32} class="text-primary" />
    </div>

    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-semibold tracking-tight mb-6">
      Still on Camunda 7? So are we.
    </h1>

    <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-10 leading-relaxed">
      Catalyst Studio is a free browser-based development environment
      for Camunda 7. No desktop download. No setup. Just open and build.
    </p>

    <div class="flex flex-col items-center gap-4">
      <a
        href="/downloads/docker-compose.yml"
        download
        class="inline-flex items-center gap-2 bg-primary hover:bg-primary-dark text-bg font-semibold px-8 py-3.5 rounded-lg transition-colors duration-150"
      >
        <!-- Download icon (Lucide) -->
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        Download Studio â€” Free
      </a>

      <p class="text-sm text-text-muted">
        Works with Camunda 7 and Operaton
      </p>
    </div>
  </div>

  <!-- Bottom fade into next section -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-bg to-transparent pointer-events-none"></div>
</section>
